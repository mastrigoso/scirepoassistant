<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="resources/css/HeaderStylesheet.css" />

	<g:HTMLPanel width="100%" height="100px">
		<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="" height="">
			<g:HTMLPanel ui:field="logoDiv" width="210" height="99"/>
			<g:Label text="Buscador de artículos científicos" 
				height="" styleName="{style.headerTitle}" width=""/>
			<g:HorizontalPanel height="99" width="">
				<g:Grid styleName="{style.loginGrid}">
					<g:row>
						<g:customCell>
							<g:Label text="Correo: " width="70px"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox width="140px"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Contraseña: "/>
						</g:customCell>
						<g:customCell>
							<g:PasswordTextBox width="140px"/>
						</g:customCell>
					</g:row>
				</g:Grid>
				<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:Button text="Entrar" />
				</g:Cell>
			</g:HorizontalPanel>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 