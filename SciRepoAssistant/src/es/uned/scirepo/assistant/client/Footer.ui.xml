<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p1="urn:import:es.uned.scirepo.assistant.client.widgets">
	
	<ui:with field='res' type='es.uned.scirepo.assistant.client.resources.AppResources'/>
	
	<ui:with field='msg' type='es.uned.scirepo.assistant.client.resources.messages.FooterMessages'/>
	
	<g:HTMLPanel>
		<g:HorizontalPanel width="100%">
			<g:Cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:HorizontalPanel>
				<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:SimplePanel styleName="{res.footerCSS.footerWCAGButton}" >
						<p1:ImageAnchor href="http://validator.w3.org/check/referer" 
							title="{msg.xhtmlAnchorTitle}" resource="{res.xhtmlIcon}" 
							imageAlt="{msg.xhtmlAnchorAlt}" >
						</p1:ImageAnchor>
					</g:SimplePanel>
				</g:Cell>
				<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:SimplePanel styleName="{res.footerCSS.footerWCAGButton}" >
						<p1:ImageAnchor href="http://jigsaw.w3.org/css-validator/check/referer" 
							title="{msg.cssAnchorTitle}" resource="{res.cssIcon}" 
							imageAlt="{msg.cssAnchorAlt}" >
						</p1:ImageAnchor>
					</g:SimplePanel>
				</g:Cell>
				<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:SimplePanel styleName="{res.footerCSS.footerWCAGButton}">			
						<p1:ImageAnchor href="http://www.w3.org/WAI/WCAG1AA-Conformance" 
							title="{msg.wcagAnchorTitle}" resource="{res.wcagIcon}" 
							imageAlt="{msg.wcagAnchorAlt}" >
						</p1:ImageAnchor>	
					</g:SimplePanel>
				</g:Cell>
			</g:HorizontalPanel>
			</g:Cell>
			
			<g:Cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
				<g:HorizontalPanel styleName="{res.footerCSS.footerLinks}" horizontalAlignment="ALIGN_RIGHT">
					<g:Anchor href="#" 
						title="{msg.contactAnchorTitle}" HTML="{msg.contactAnchorText}" />
		          	<g:Label text="&nbsp;|&nbsp;" />
		          	<g:Anchor href="#" 
						title="{msg.privacityAnchorTitle}" HTML="{msg.privacityAnchorText}"/>
		          	<g:Label text="&nbsp;|&nbsp;" />
		          	<g:Anchor href="#" 
						title="{msg.aboutAnchorTitle}" HTML="{msg.aboutAnchorText}"/>
	        	</g:HorizontalPanel>
        	</g:Cell>
        	
        </g:HorizontalPanel>
        
	</g:HTMLPanel>
	
</ui:UiBinder> 