<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='res' type='es.uned.scirepo.assistant.client.resources.AppResources'/>
	
	<ui:with field='msg' type='es.uned.scirepo.assistant.client.resources.messages.GlobalMessages'/>
	
	<g:VerticalPanel width="100%" height="100%">
		<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:Image resource="{res.loadingIcon}" altText="{msg.loadingImageAlt}" ui:field="image" />
		</g:Cell>
		<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="logo" />
		</g:Cell>
	</g:VerticalPanel>
	
</ui:UiBinder> 